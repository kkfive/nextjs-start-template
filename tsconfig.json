  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./types/**/*.ts", "tailwind.config.cjs", "apps/mobile/postcss.config.ts", "eslint.config.ts", "apps/mobile/tailwind.config.ts", "shared/configs/eslint/eslint.config.js", "shared/configs/tailwind/postcss.config.cjs"],
  "exclude": ["node_modules"]
}
