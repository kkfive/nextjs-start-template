{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]

    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts","types/*.d.ts", "**/*.tsx", ".next/types/**/*.ts", "uno.config.ts", "tailwind.config.js", "next.config.js"],
  "exclude": ["node_modules"]
}
